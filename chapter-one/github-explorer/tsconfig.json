{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],            
    "allowJs": true,                                      
    "jsx":"react-jsx",
    "noEmit": true,                                       
    "strict": true,                                       
    "moduleResolution": "node",                           
    "resolveJsonModule": true,                            
    "isolatedModules": true,                              
    "target": "es2016",                                   
    "allowSyntheticDefaultImports": true,                 
    "esModuleInterop": true,                             
    "skipLibCheck": true,                                
    "forceConsistentCasingInFileNames": true,            
    "module": "commonjs",                                 
  },
  "include": ["src"]
}
